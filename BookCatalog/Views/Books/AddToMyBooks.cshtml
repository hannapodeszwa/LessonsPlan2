@model BookCatalog.Models.BookAndUserBooks

@{
    ViewData["Title"] = "Add to my books";
}

<h1>Add to my books</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(tuple => Model.Book.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(tuple => Model.Book.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(tuple => Model.Book.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(tuple => Model.Book.Author)
        </dd>
    </dl>
</div>
<label for="states">What stage of reading this book are you at?:</label>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToMyBooks">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserBook.UserId" class="control-label" hidden=true></label>
                <input asp-for="UserBook.UserId" class="form-control" hidden=true />
                <span asp-validation-for="UserBook.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserBook.BookId" class="control-label" hidden=true></label>
                <input asp-for="UserBook.BookId" class="form-control" hidden=true />
                <span asp-validation-for="UserBook.BookId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="UserBook.State" class="control-label"></label>
                <br />
                <select asp-for="UserBook.State"
                        asp-items="@(ViewData["StatesList"] as SelectList)">
                </select>
                <span asp-validation-for="UserBook.State" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="AddToMyBooks" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
